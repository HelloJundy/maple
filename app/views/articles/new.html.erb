<h1>New Articles</h1>
<%= form_for :article, url: articles_path do |f| %>
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :subtitle %><br>
  <%= f.text_field :subtitle %>
</p>
<p>
  <%= f.label :classification %><br>
  <%= f.collection_select(:classification_id, Classification.all, :id, :title) %>
</p>

<P>
  <%= f.label :text %><br>
  <%= f.text_area :body %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
<%= link_to "Back", articles_path %>
